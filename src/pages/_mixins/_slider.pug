mixin slider
	if workSlides
		.slider
			.slider__wrapper
				each slide in workSlides
					.slider__item
						img.lazyload(src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAEALAAAAAABAAEAAAICTAEAOw==" data-src='../'+slide['img'] alt='')
						p= slide['text']

			a.slider__control.slider__control_left(href='#', role='button')
			a.slider__control.slider__control_right(href='#', role='button')

	else

mixin slider__section(sectionTitle='Наши работы')
	if workSlides
		div.section.section-our-works__komm
			.container
				.section-title
					h2= sectionTitle
				if workSlides
					.slider
						.slider__wrapper
							each slide in workSlides
								.slider__item
									img.lazyload(src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAEALAAAAAABAAEAAAICTAEAOw==" data-src='../'+slide['img'] alt='')
									p= slide['text']

						a.slider__control.slider__control_left(href='#', role='button')
						a.slider__control.slider__control_right(href='#', role='button')

	else
