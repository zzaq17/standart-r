extends ../_templates/_template_default

block variables
	//- head part
	- var subDomain = 'ramenskoye'
	- var pageUrl = '/akcii'
	- var mainpage = ''
	- var title = 'Акции и скидки'
	- var metaDescr = 'Сэкономьте с акциями на услуги клининговой компании «Стандарт» в Раменском'
	- var ogImage = 'img/kliningovye-uslugi-oblozhka-preview-bage.png'
		//- main screen
	- var h1 = 'Акции и Скидки на клининговые услуги'
